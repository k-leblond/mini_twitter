<div class="container">
  <h1>Share with your community!</h1>
    <div class="container">
      <%= simple_form_for @post do |f| %>
        <%= f.input :content, label: false, placeholder: "What's on your mind?" %>
        <%= f.submit %>
      <% end %>
    </div>
</div>
<div class="container">
  <h1>Feed</h1>
    <div class="container">
      <% @posts.order(id: :desc).each do |post| %>
        <%= render "posts/post", post: post %>
      <% end %>
    </div>
</div>
